<h1>My Trip</h1>
<% if @cart.empty? %>
  <h3>You haven't added any properties to your Trip</h3>
  <% else %>
    <%= render partial: "partials/property", locals: {property: @cart.property } %>

<h5>Desired reservation dates</h5>
<p>From: <%= @cart.start_date %></p>
<p>To: <%= @cart.end_date %></p>
<%= button_to "Remove From My Trip", cart_path, method: :delete, class: "btn btn-default" %>
<% if current_user %>
  <%= button_to "Request Reservation", reservations_path, method: :post, class: "btn btn-default"  %>
  <% else %>
  <%= render partial: 'partials/log_in' %>
  <% end %>
<% end %>

