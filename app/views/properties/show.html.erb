<div class="thumbnail col-sm-6 col-md-4">
  <%= image_tag @property.image.url(:medium) %>
  <div class="caption">
    <h3><%= @property.title %></h3>
    <p><%= @property.description %></p>
    <p id="price"> Price: <%= number_to_currency(@property.price) %></p>
    <p>Category: <%= @property.category.name %></p>
    <p>Maximum Occupancy: <%= @property.occupancy %></p>
    <p>Location: <%= @property.address.city %></p>
    <p>Bathroom: <%= @property.bathroom %></p>
    <% if !@property.retired? %>
      <p>
        <%= form_tag  "/properties/#{@property.id}/add_to_cart", method: :post do %>
          <%= date_field_tag "property[start_date]" %>
          <%= date_field_tag "property[end_date]" %>
          <%= submit_tag "Request reservation mofo", class: "btn btn-default add-to-cart" %>
        <% end %>
      </p>
    <% end %>
  </div>
</div>
