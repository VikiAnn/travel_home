<script src="//cdn.jsdelivr.net/clippy.js/1.0/clippy.min.js"></script>
<script type="text/javascript">
clippy.load('Clippy', function(agent) {
    agent.show();
    agent.moveTo(100, 200);
    speakIn(agent, 15000);
});
function speakIn(agent, seconds) {
    agent.speak('<%= "There are #{@host_request_amount} pending requests for travelers to become hosts. Visit your profile page to approve or deny." %>');
    setTimeout(function(){speakIn(agent, seconds)}, seconds);
}
</script>
