<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="profile-primary profile-block">
        <div class="text-center">
          <%= image_tag "https://placekitten.com/g/95/95", class: "img-circle avatar" %>
          <h4><%= @user.name %></h4>
          <hr>
          <% if @user == current_user %>
            <%= link_to "Edit My Profile", edit_user_path(current_user), class: "btn btn-default edit_button"%>

        <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="profile-block">
        <h4>User Info</h4>
        <h5>Email Address:</h5> <%= @user.email_address %></h5>
      </div>
    </div>

    <%= render partial: 'address' %>

    <div class="col-md-3">
      <div class="profile-block">
        <h4>Want to become a host?</h4>
        <%= link_to "Make a request", new_host_request_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>

<% unless @user.owners.empty? %>
  <div class="row">
    <div class="col-md-12">
      <h2>Properties I Manage</h2>
      <hr>
      <table class="table table-striped">

      <thead>
        <tr>
          <th>Property name</th>
          <th>Owner</th>
          <th>Category</th>
          <th>Daily rate</th>
          <th>Location</th>
          <th>Status</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @user.owners.each do |partner| %>
        <% partner.properties.each do |property| %>
        <tr class="property_<%= property.id %>">
          <td><%= link_to "#{property.title}", property_path(property) %></td>
          <td><%= property.user.name %></td>
          <td><%= property.category.name %></td>
          <td>$<%= property.price %></td>
          <td><%= property.location %></td>
          <td><% if property.retired? %>Retired<% else %>Active<% end %></td>
          <td><%= link_to "Edit", edit_property_path(property) %> |
            <% if property.retired? %>
            <%= link_to "Activate", property_path(property, property: {retired: false}), method: "put" %> |
            <% else %>
            <%= link_to "Retire", property_path(property, property: {retired: true}), method: "put" %> |
            <% end %>
            <%= link_to "Manage photos", property_photos_path(property) %>
          </td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <% end %>
</div>
