<table class="table table-hover">
  <thead>
    <th>Item</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Subtotal</th>
  </thead>
  <tbody>
    <% reservation.items.uniq.each do |item| %>
    <tr class="cart_item cart_item_<%= item.id %>">
      <td class="title"><%= link_to item.title, item_path(item) %></a></td>
      <td class="price">$<%= item.price %></td>
      <td class="quantity"><%= item.quantity %></td>
      <td class="subtotal">$<%= reservation.subtotal(item) %></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td>Status: <%= reservation.status %></td>
      <td>Reserved: <%= reservation.created_at %></td>
      <td>Updated: <%= reservation.updated_at %></td>
      <td>Total: $<%= reservation.total %></td>
    </tr>
  </tfoot>
</table>
