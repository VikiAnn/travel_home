<table class="table table-hover">
  <thead>
    <th>Item</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Subtotal</th>
  </thead>
  <tbody>
    <% reservation.items.uniq.each do |item| %>
    <tr class="cart_item cart_item_<%= item.id %>">
      <td class="title"><%= link_to item.title, item_path(item) %></a></td>
      <td class="price">$<%= item.price %></td>
      <td class="quantity">
        <%= button_to admin_reservation_path(reservation), method: :put, class: "btn btn-xs decrease float_left", name: "decrease", value: "#{item.id}" do %>
        <span class="glyphicon glyphicon-minus"></span>
        <% end %>
        <div class="float_left"><%= item.quantity %></div>
        <%= button_to admin_reservation_path(reservation), method: :put, class: "btn btn-xs increase float_left", name: "increase", value: "#{item.id}" do %>
        <span class="glyphicon glyphicon-plus"></span>
        <% end %>
      </td>
      <td class="subtotal">$<%= reservation.subtotal(item) %></td>
      <td> <%= button_to admin_reservation_path(reservation), method: :delete, name: :remove, name: "remove", value: "#{item.id}" do %>
        <span>Remove</span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td>Status: <%= reservation.status %></td>
      <td>Reserved: <%= reservation.created_at %></td>
      <td>Updated: <%= reservation.updated_at %></td>
      <td>Total: $<%= reservation.total %></td>
    </tr>
  </tfoot>
</table>
